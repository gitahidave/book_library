<div>
  <h1>Books</h1>
  
  <div>
    <%= link_to "Add New Book", new_book_path %>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Published Year</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book %></td>
          <td><%= book.author %></td>
          <td><%= book.published_year %></td>
          <td><%= book.status %></td>
          <td>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Delete", book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% if book.status == "available" %>
              <%= link_to "Borrow", book_path(book) %>
            <% elsif book.status == "borrowed" %>
              <%= link_to "Return", book_path(book) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>